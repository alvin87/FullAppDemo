<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:id="@+id/recommend_menu_child_main">
      <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:id="@+id/recommend_menu_top_layout" />
      <TableLayout
            android:gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                  android:gravity="center_vertical"
                  android:background="#ffc9cccd"
                  android:paddingTop="1dip"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
                  <RelativeLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/recommend_menu_child_favourite"
                        android:background="@drawable/recommend_menu_item_background"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dip">
                        <ImageView
                              android:id="@+id/recommend_menu_child_favourite_icon"
                              android:layout_width="30dip"
                              android:layout_height="30dip"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="3dip"
                              android:src="@drawable/app_menu_favorite" />
                        <TextView
                              android:id="@+id/recommend_menu_child_favourite_text"
                              android:gravity="center"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/recommend_menu_child_favourite_icon"
                              android:textColor="@color/black"
                              android:text="@string/favourite_title" />
                  </RelativeLayout>
                  <RelativeLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/recommend_menu_child_select_feedback"
                        android:background="@drawable/recommend_menu_item_background"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dip">
                        <ImageView
                              android:id="@+id/recommend_menu_child_select_feedback_icon"
                              android:layout_width="30dip"
                              android:layout_height="30dip"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="3dip"
                              android:src="@drawable/menu_feed" />
                        <TextView
                              android:id="@+id/recommend_menu_child_select_feedback_text"
                              android:gravity="center"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/recommend_menu_child_select_feedback_icon"
                              android:textColor="@color/black"
                              android:text="@string/feedback_title" />
                  </RelativeLayout>
                  <RelativeLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/recommend_menu_child_about"
                        android:background="@drawable/recommend_menu_item_background"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dip">
                        <ImageView
                              android:id="@+id/recommend_menu_child_about_icon"
                              android:layout_width="30dip"
                              android:layout_height="30dip"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="3dip"
                              android:src="@drawable/menu_about" />
                        <TextView
                              android:id="@+id/recommend_menu_child_about_text"
                              android:gravity="center"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/recommend_menu_child_about_icon"
                              android:textColor="@color/black"
                              android:text="@string/about_us_title" />
                  </RelativeLayout>
                  <RelativeLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/recommend_menu_child_setting"
                        android:background="@drawable/recommend_menu_item_background"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dip">
                        <ImageView
                              android:id="@+id/recommend_menu_child_setting_icon"
                              android:layout_width="30dip"
                              android:layout_height="30dip"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="3dip"
                              android:src="@drawable/app_menu_exit" />
                        <TextView
                              android:id="@+id/recommend_menu_child_setting_text"
                              android:gravity="center"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/recommend_menu_child_setting_icon"
                              android:textColor="@color/black"
                              android:text="@string/exit_title" />
                  </RelativeLayout>
            </TableRow>
      </TableLayout>
</LinearLayout>
