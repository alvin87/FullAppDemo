<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recommend_list_item_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/manager_image_layout"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="7dip" >

            <ImageView
                android:id="@+id/manager_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/manager_summary_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/manager_app_list_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/manager_app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="2dip"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textSize="@dimen/manager_item_name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/manager_app_name"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/manager_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="1dip"
                        android:padding="0dip"
                        android:textSize="@dimen/size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/manager_app_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/manager_app_name"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="1dip"
                        android:layout_toRightOf="@id/manager_app_version"
                        android:padding="0dip"
                        android:textSize="@dimen/size"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/manager_app_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="15dip"
                    android:visibility="invisible" >
                </Button>
            </RelativeLayout>

            <TextView
                android:id="@+id/manager_app_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manager_app_list_top"
                android:layout_gravity="left"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_similar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/manager_image_layout_similar"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="7dip" >

            <ImageView
                android:id="@+id/manager_app_icon_similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/manager_summary_layout_similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/manager_app_list_top_similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/manager_app_name_similar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="2dip"
                    android:singleLine="true"
                    android:textColor="@color/title"
                    android:textSize="@dimen/manager_item_name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/manager_app_name_similar"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:id="@+id/manager_app_version_similar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/manager_app_name_similar"
                        android:layout_gravity="left"
                        android:layout_marginTop="1dip"
                        android:padding="0dip"
                        android:textSize="@dimen/size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/manager_app_size_similar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/manager_app_name_similar"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="1dip"
                        android:layout_toRightOf="@id/manager_app_version_similar"
                        android:padding="0dip"
                        android:textSize="@dimen/size"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/manager_app_button_similar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1dip"
                    android:layout_marginTop="7dip"
                    android:focusable="false" >
                </Button>
            </RelativeLayout>

            <TextView
                android:id="@+id/manager_app_introduce_similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manager_app_list_top_similar"
                android:layout_gravity="left"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="1dip"
                android:maxLines="2"
                android:textColor="#8c8c8c"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>